<Window x:Class="AmonicAirLines.BillingConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmonicAirLines"
        mc:Ignorable="d"
        Title="BillingConfirmation" Height="200" Width="260">
    <Grid>
        <Grid 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition MinHeight="58"/>
                <RowDefinition Height="5"/>
                <RowDefinition MinHeight="20"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition MinWidth="40" Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Total Amount:"/>
                <TextBlock Grid.Column="2" Name="tb_TotalAmount"/>
            </Grid>
            <TextBlock Grid.Row="2" Text="Paid using:"/>
            <Grid Grid.Row="4" HorizontalAlignment="Center"  VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="16"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition MinHeight="16"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition MinHeight="16"/>
                </Grid.RowDefinitions>
                <RadioButton Grid.Row="0" Name="rb_CreditCard" Content="Credit Card"/>
                <RadioButton Grid.Row="2" Name="rb_Cash" Content="Cash"/>
                <RadioButton Grid.Row="4" Name="rb_Voucher" Content="Voucher"/>
            </Grid>
            <Grid Grid.Row="6" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="90" Width="Auto"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition MinWidth="90" Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="issue tickets" Click="Button_Click"/>
                <Button Grid.Column="2" Content="cancel" Click="Button_Click_1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
