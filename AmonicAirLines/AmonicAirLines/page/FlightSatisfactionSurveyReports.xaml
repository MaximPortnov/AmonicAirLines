<Page x:Class="AmonicAirLines.page.FlightSatisfactionSurveyReports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AmonicAirLines.page"
      xmlns:ns="clr-namespace:AmonicAirLines.forXaml"
      mc:Ignorable="d" 
      Background="White"
      KeyDown="OnKeyDown"
      d:DesignHeight="250" d:DesignWidth="800"
      Title="FlightSatisfactionSurveyReports">

    <Grid ns:Rack.RackRows="Auto *">
        
        <Menu Grid.Row="0">
            <MenuItem Header="_View Result Summary" Click="MenuItem_Click"/>
            <MenuItem Header="_View Datailed Result" Click="MenuItem_Click"/>
            <MenuItem Header="_Exit" Click="MenuItem_Click"/>
        </Menu>
        <TabControl Name="tc_main" Grid.Row="1" >
            <TabItem TabIndex="0" Header="TabItem" Visibility="Collapsed">
                <Grid
                    ns:Rack.RackRows="* * *"
                    ns:Rack.RackColumns="* * *"
                    VerticalAlignment="Center"
                    Margin="50,0,50,0"
                    >
                    <!-- 0 row -->
                    <Grid Grid.Column="0" ns:Rack.RackColumns="* Auto" HorizontalAlignment="Left">
                        <TextBlock Grid.Column="0" Text="Field work: "/>
                        <TextBlock Grid.Column="1" Name="tb_fieldwork" Text="test"/>
                    </Grid>
                    <Grid Grid.Column="3" ns:Rack.RackColumns="* *" HorizontalAlignment="Right">
                        <TextBlock Grid.Column="0" Text="Sample Size: "/>
                        <TextBlock Grid.Column="1" Name="tb_sampleSize" Text="test"/>
                    </Grid>
                    <!-- 1 row -->
                    <Separator Grid.Row="1" Grid.ColumnSpan="3" />
                    <!-- 2 row -->
                    <Grid Name="g_table" Grid.Row="2" Grid.ColumnSpan="3">
                        
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem TabIndex="1" Header="TabItem" Visibility="Collapsed">
                <Grid
                    ns:Rack.RackRows="* * *"
                    ns:Rack.RackColumns="* * *"
                    VerticalAlignment="Center"
                    Margin="50,0,50,0"
                    >
                    <!-- 0 row -->
                    <!-- 1 row -->
                    <!-- 2 row -->
                    <Grid Name="g_table1" Grid.Row="2" Grid.ColumnSpan="3">

                        
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem TabIndex="2" Header="TabItem" Visibility="Collapsed">
                <Grid 
                    ns:Rack.RackColumns="* * *" 
                    ns:Rack.RackRows="* 5 * * * *" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    >
                    <TextBlock ns:GridHelpers.GridConfig="0,0,1,1"  Text="Файл: "/>
                    <TextBlock ns:GridHelpers.GridConfig="1,0,1,1" x:Name="tb_fileName" Text="-"/>
                    <Button ns:GridHelpers.GridConfig="0,2,3,1" Content=" Загрузить файл " Click="Button_Click"/>
                    <StackPanel Orientation="Horizontal" ns:GridHelpers.GridConfig="0,4,3,1">
                        <ComboBox x:Name="monthComboBox" Width="100" Margin="5"
                            DisplayMemberPath="Value"
                            SelectedValuePath="Key"
                            SelectedIndex="0"/>
                        <ComboBox x:Name="yearComboBox" Width="100" Margin="5" SelectedIndex="-1"/>
                    </StackPanel>
                    
                    <Button ns:GridHelpers.GridConfig="0,5,3,1" Content="Загрузить на сервер" Click="Button_Click_1"/>


                </Grid>
            </TabItem>
            
        </TabControl>

    </Grid>
</Page>
