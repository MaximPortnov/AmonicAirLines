<Page x:Class="AmonicAirLines.page.BookingConfirmation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AmonicAirLines.page"
      mc:Ignorable="d" 
      Background="White"
      KeyDown="OnKeyDown"
      d:DesignHeight="700" d:DesignWidth="800"
      Title="BookingConfirmation">

    <Grid>
        <Grid Margin="10,10,10,10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60" Name="heightReturnGB"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Outbound flight details">
                <StackPanel Orientation="Horizontal" Height="34">
                    <Label Name="lb_outFrom" Content="From:" Margin="0,0,40,0"/>
                    <Label Name="lb_outTo" Content="To:" Margin="0,0,40,0"/>
                    <Label Name="lb_outCabinType" Content="Cabin Type:" Margin="0,0,40,0"/>
                    <Label Name="lb_outDate" Content="Date:" Margin="0,0,40,0"/>
                    <Label Name="lb_outFlightNumber" Content="Flight number:" />
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="1"  Header="Return flight details" Name="ReturnFlightDetails">
                <StackPanel Orientation="Horizontal" Height="34">
                    <Label Name="lb_retFrom" Content="From:" Margin="0,0,40,0"/>
                    <Label Name="lb_retTo" Content="To:" Margin="0,0,40,0"/>
                    <Label Name="lb_retCabinType" Content="Cabin Type:" Margin="0,0,40,0"/>
                    <Label Name="lb_retDate" Content="Date:" Margin="0,0,40,0"/>
                    <Label Name="lb_retFlightNumber" Content="Flight number:" Margin="0,0,40,0"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="2" Header="Passenger details" >
                <StackPanel Orientation="Vertical" Height="129">

                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Firstname" Height="29"/>
                            <TextBox Name="tb_Firstname" Grid.Column="1" Height="18"/>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Lastname" Height="28"/>
                            <TextBox Name="tb_Lastname" Grid.Column="1" Height="18"/>
                        </Grid>
                        <Grid Grid.Column="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Birthdate" Height="28"/>
                            <TextBox Name="tb_Birthdate" Grid.Column="1" Height="18" PreviewTextInput="OutboundTextBox_PreviewTextInput" TextChanged="OutboundTextBox_TextChanged"/>
                        </Grid>
                    </Grid>
                    <Grid Height="43" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Passport number" Height="29"/>
                            <TextBox Name="tb_PassportNumber" Grid.Column="1" Height="18"/>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Passport country" Height="28"/>
                            <ComboBox Name="cb_PassportCountry" Grid.Column="1" Height="25"/>
                        </Grid>
                        <Grid Grid.Column="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Phone" Height="25"/>
                            <TextBox Name="tb_Phone" Grid.Column="1" Height="18"
                                     PreviewTextInput="PhoneNumberTextBox_PreviewTextInput" TextChanged="PhoneNumberTextBox_TextChanged" InputScope="TelephoneNumber"/>
                        </Grid>
                    </Grid>
                    <Button Content="Add passenger" Height="20" Width="108" HorizontalAlignment="Right" Click="Button_Click_1"/>
                </StackPanel>
            </GroupBox>
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Passenger list" />
                <DataGrid Grid.Row="1" x:Name="passengersDataGrid" AutoGenerateColumns="False" CanUserAddRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Firstname" Binding="{Binding firstName}" />
                        <DataGridTextColumn Header="Lastname" Binding="{Binding lastName}" />
                        <DataGridTextColumn Header="Birthdate" Binding="{Binding birthdate, StringFormat=\{0:dd/MM/yyyy\}}" />
                        <DataGridTextColumn Header="Passport number" Binding="{Binding passportNumber}" />
                        <DataGridTextColumn Header="Passport Country ID" Binding="{Binding passportCountryID}" />
                        <DataGridTextColumn Header="Phone" Binding="{Binding phone}" />
                    </DataGrid.Columns>
                </DataGrid>


                <Button Grid.Row="2"  Content="Remove passenger" HorizontalAlignment="Right" Margin="2" Width="111" Click="Button_Click_2"/>

            </Grid>
            <Grid Grid.Row="4" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Back to search for flights" Click="Button_Click" />
                <Button Grid.Column="2" Content="Confirm booking" Click="Button_Click_3" />

            </Grid>
        </Grid>
    </Grid>
</Page>
